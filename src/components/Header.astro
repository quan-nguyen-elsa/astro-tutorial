---
import Language from "./Language";
const currenLang = Astro.currentLocale || 'en';
---
<header class="header">
  <div class="container">
    <div class="header-inner">
      <div class="brand"><a href="#default" class="logo">CompanyLogo</a></div>
      <div class="header-right">
        <ul class="menu">
          <li><a class="active" href="#home">Home</a></li>
          <li><a href="#contact">Contact</a></li>
          <li><a href="#about">About</a></li>
        </ul>
        <Language client:load langCode={currenLang} />
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: #f1f1f1;
  }
  .header-inner {
    padding: 20px 0;
    display: flex;
    justify-content: space-between;
  }

  .header a {
    float: left;
    color: black;
    text-align: center;
    padding: 12px;
    text-decoration: none;
    font-size: 18px;
    line-height: 25px;
    border-radius: 4px;
  }

  .header a.logo {
    font-size: 25px;
    font-weight: bold;
  }

  .header a:hover {
    background-color: #ddd;
    color: black;
  }

  .header a.active {
    background-color: dodgerblue;
    color: white;
  }

  .header-right, .menu {
    display: flex;
    align-items: center;
  }

  @media screen and (max-width: 500px) {
    .header a {
      float: none;
      display: block;
      text-align: left;
    }
  }
</style>